upstream puma {
  server unix:{{ puma_socket_dir }} fail_timeout=0;
}

server {
  listen 80;
  listen 443 default ssl;
  server_name {{ nginx_server_names | join(" ") }};
  root {{ remote_app_root_path }}/current/public;

  client_max_body_size 4G;
  keepalive_timeout 10;

  error_page 500 502 504 /500.html;
  error_page 503 @503;

  ssl on;
  ssl_ciphers ECDH+AESGCM:ECDH+AES256:ECDH+AES128:DH+3DES:RSA+3DES:!ADH:!AECDH:!MD5;
  ssl_prefer_server_ciphers on;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_certificate {{ self_signed_cert_path }}/{{ self_signed_cert_filename }}.csr;
  ssl_certificate_key {{ self_signed_cert_key_path }}/{{ self_signed_cert_filename }}.key;

  location / {
    proxy_set_header  Host $host;
    proxy_set_header  X-Forwarded-Proto $scheme;
    proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_pass        http://puma;
  }

  location ~* ^/assets/ {
    # Per RFC2616 - 1 year max expiry
    gzip_static on;
    expires 1y;
    add_header Cache-Control public;
    add_header Last-Modified "";
    add_header Etag "";
    break;
  }

  location = /50x.html {
    root {{ remote_app_root_path }}/current/public;
  }

  if ($request_method !~ ^(GET|HEAD|PUT|PATCH|POST|DELETE|OPTIONS)$ ){
    return 405;
  }
}
